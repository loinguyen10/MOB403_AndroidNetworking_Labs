            android:id="@+id/lab6Button"/>

        <Button
            android:layout_width="55pt"
            android:layout_height="25pt"
            android:text="Lab 7"
            android:textSize="20dp"
            android:id="@+id/lab7Button"/>

        <Button
            android:layout_width="55pt"
            android:layout_height="25pt"
            android:text="Lab 8"
